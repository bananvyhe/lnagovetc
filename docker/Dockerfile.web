FROM ruby:3.3.5-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    git \
    curl \
    libpq-dev \
    postgresql-client \
    nodejs \
    npm \
  && rm -rf /var/lib/apt/lists/*

RUN gem install bundler && gem install rails -v 8.0.2

WORKDIR /app

CMD ["bash", "-lc", "cd /app/backend && bundle exec rails server -b 0.0.0.0 -p 3000"]
